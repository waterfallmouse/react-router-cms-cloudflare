{
	"name": "react-router-cms-cloudflare",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"cf-typegen": "wrangler types",
		"deploy": "bun run build && wrangler deploy",
		"dev": "react-router dev",
		"postinstall": "bun run cf-typegen",
		"preview": "bun run build && vite preview",
		"typecheck": "bun run cf-typegen && react-router typegen && tsc -b",
		"lint": "bunx @biomejs/biome check .",
		"lint:fix": "bunx @biomejs/biome check . --fix",
		"format": "bunx @biomejs/biome format .",
		"check": "bunx @biomejs/biome check .",
		"db:generate": "prisma generate",
		"db:migrate": "wrangler d1 migrations apply cms-database --local && wrangler d1 migrations apply cms-database",
		"db:migrate:local": "wrangler d1 migrations apply cms-database --local",
		"db:seed": "bun run db:generate && bun run prisma/seed.ts",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"test:e2e": "playwright test"
	},
	"dependencies": {
		"@prisma/client": "^6.10.1",
		"isbot": "^5.1.27",
		"prisma": "^6.10.1",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router": "^7.5.3",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.5",
		"@cloudflare/vite-plugin": "^1.0.12",
		"@playwright/test": "^1.53.1",
		"@react-router/dev": "^7.5.3",
		"@tailwindcss/vite": "^4.1.4",
		"@types/bun": "^1.2.17",
		"@types/node": "^20",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"playwright": "^1.53.1",
		"tailwindcss": "^4.1.4",
		"typescript": "^5.8.3",
		"vite": "^6.3.3",
		"vite-tsconfig-paths": "^5.1.4",
		"wrangler": "^4.21.2"
	}
}
